<div class="contact">
  <div class="container">
    <h2>Вхід</h2>
    <div class="col-xs-12 col-sm-10 col-sm-push-1 col-md-6 col-md-push-3">
      <div class="form-details">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.label :email, for: 'user_email' %><br />
            <%= f.email_field :email, autofocus: true, class: 'email-con' %>
          </div>
          <br/>

          <div class="field">
            <label for="user_password">Пароль</label>
            <%= f.password_field :password, autocomplete: "off", class: 'name-con' %>
          </div>
          <br/>

          <% if devise_mapping.rememberable? -%>
            <div class="checkbox-inline">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <br/>

          <div class="actions">
            <%= f.submit "Log in", class: 'btn btn-default btn-contact' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
