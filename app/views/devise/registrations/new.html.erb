<div class="contact">
  <div class="container">
    <h2>Реєстрація</h2>
    <div class="col-xs-12 col-sm-10 col-sm-push-1 col-md-6 col-md-push-3">
      <div class="form-details">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email, for: 'user_email' %><br />
            <%= f.email_field :email, autofocus: true, class: 'email-con' %>
          </div>
          <br/>

          <div class="field">
            <label for="user_password">Пароль</label>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'name-con' %>
          </div>
          <br/>

          <div class="field">
            <label for="user_password_confirmation">Підтвердження паролю</label>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'name-con' %>
          </div>
          <br/>
          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-default btn-contact' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
